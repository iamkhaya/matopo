<div class='page-header'>
  <div class='btn-toolbar pull-right'>
    <div class='btn-group'>
      <%= button_to "New Trip", new_admin_trip_path, class: "btn btn-primary" %>
    </div>
  </div>
  <h2>Trips</h2>
</div>

<center>
  <div class="pagination">
    <%= will_paginate @trips %>
  </div>
</center>

  <div id="trips">
    <centre>
      <div class="table-responsive table-striped table-condensed">
        <table class="table table-responsive table-striped table-condensed">
          <thead>
            <tr>
              <th>#</th>
              <th>Name</th>
              <th>Start date</th>
              <th>End Date</th>
              <th>User name</th>
              <th>City</th>
              <th>Region</th>
              <th>Country</th>
              <th># Adults</th>
              <th># Children</th>
              <th># Infants</th>
              <th>Manipulation</th>
            </tr>
          </thead>

          <tbody>
            <% @trips.each do |trip| %>
            <tr>
              <td>
                <p><%=  trip.id %></p>
              </td>
              <td>
                <p><%=  trip.name %></p>
              </td>
              <td>
                <p><%=  trip.start_date %></p>
              </td>
              <td>
                <p><%=  trip.end_date %></p>
              </td>
              <td>
                <p><%=  trip.user_id %></p>
              </td>
              <td>
                <p><%=  trip.city %></p>
              </td>
              <td>
                <p><%=  trip.region %></p>
              </td>
              <td>
                <p><%=  trip.country %></p>
              </td>
              <td>
                <p><%=  trip.number_of_adults%></p>
              </td>
              <td>
                <p><%=  trip.number_of_children%></p>
              </td>
              <td>
                <p><%=  trip.number_of_infants%></p>
              </td>
              <td>
                <%= link_to  new_trip_path(trip), class: "btn btn-success btn-xs" do %>
                <i class=" fa fa-check"></i>
                <%end%>

                <%= link_to  edit_admin_trip_path(trip), class: "btn btn-primary btn-xs" do %>
                <i class=" fa fa-pencil"></i>
                <%end%>

                <%= link_to trip_path(trip), class: "btn btn-danger btn-xs", method: :delete, data: { confirm: "Are you sure you want to delete this provider?" } do %>
                <i class=" fa fa-trash-o"></i>
                <%end%>
</td>
            </tr>
            <% end %>
          </tbody>

        </table>
      </div>
    </centre>

  </div>
