<%= simple_form_for([:admin, @offering]) do |f| %>

  <%= f.association :provider %>
  <%= f.input :name %>
  <%= f.input :activity_id, collection: Activity.all%>
  <%= f.input :description %>
  <%= f.input :place %>
  <%= f.input :pricingperperson, label: 'Price per Person' %>
  <%= f.input :inclusions,label: 'Whats included'%>
  <%= f.input :exclusions, label: 'Whats not included' %>

  <h4>Images</h4>
  <%= f.simple_fields_for :attachments do |ff| %>
    <%= ff.input :file, as: :file, label: "File ##{ff.index + 1}" %>
    <%= ff.input :file_cache, as: :hidden %>
  <% end %>


  <%= f.button :submit, class: "btn-primary" %>
<% end %>
