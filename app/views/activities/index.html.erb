<div class='page-header'>
  <div class='btn-toolbar pull-right'>
    <div class='btn-group'>
      <%= link_to "New Activity", new_admin_activity_path, class: "btn btn-primary" %>
    </div>
  </div>
  <h2>Activities</h2>
</div>

<center>
  <div class="pagination">
    <%= will_paginate @activities %>
  </div>
</center>

<div id="activities">
  <centre>
    <div class="table-responsive table-striped table-condensed">
      <table class="table">
        <thead>
          <tr>
            <th>#</th>
            <th>Name</th>
            <th>Description</th>
            <th>Categories</th>
            <th>Manipulation</th>
          </tr>
        </thead>

        <tbody>
          <% @activities.each do |activity| %>
          <tr>
            <td>
              <p><%=  activity.id %></p>
            </td>
            <td>
              <p><%=  activity.name %></p>
            </td>
            <td>
            <% activity.categories.each do |category| %>
              <%=  category.name %> &nbsp
            <% end%>
          </td>
            <td>
              <p><%=  activity.description %></p>
            </td>

            <td>
                <%= link_to  activity_path(activity), class: "btn btn-success btn-xs" do %>
                <i class=" fa fa-check"></i>
                <%end%>

                <%= link_to  edit_admin_activity_path(activity), class: "btn btn-primary btn-xs" do %>
                <i class=" fa fa-pencil"></i>
                <%end%>

                <%= link_to activity_path(activity), class: "btn btn-danger btn-xs", method: :delete, data: { confirm: "Are you sure you want to delete this provider?" } do %>
                <i class=" fa fa-trash-o"></i>
                <%end%>
            </td>
          </tr>
        </tr>
        <% end %>
      </tbody>

    </table>
  </div>
</centre>

</div>
