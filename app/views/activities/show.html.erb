<header>
  <h3><b>Name:&nbsp;</b><%= @activity.name %></h3>
</header>

<p><b>Description:&nbsp;</b><%= @activity.description %></p>
<p><b>Categories:&nbsp;</b>
<ul>
  <% @activity.categories.each do |category| %>
    <li><%=  category.name %></li>
  <% end%>
</ul>

<ul class="actions">
    <li>
      <li><%= link_to "Edit Activity", [:edit, @category, @activity], class: "edit" %>
    </li>
    <li>
        <%= link_to "Delete Activity", [@category, @activity],
            method: :delete,
            data: { confirm: "Are you sure you want to delete this activity?" },
            class: "delete"
        %>
    </li>
</ul>
