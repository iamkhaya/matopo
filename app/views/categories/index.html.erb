<div class='page-header'>
  <div class='btn-toolbar pull-right'>
    <div class='btn-group'>
      <%= link_to "New Category", new_admin_category_path, class: "btn btn-primary" %>
    </div>
  </div>
  <h2>Categories</h2>
</div>

<center>
  <div class="pagination">
    <%= will_paginate @categories %>
  </div>
</center>

<div id="categories">
  <centre>
    <div class="table-responsive table-striped table-condensed">
      <table class="table table-responsive table-striped table-condensed">
        <thead>
          <tr>
            <th>#</th>

            <th>Name</th>
            <th>Description</th>
            <th>Manipulation</th>
          </tr>
        </thead>

        <tbody>
          <% @categories.each do |category| %>
          <tr>
            <td>
              <p><%= category.id %></p>
            </td>
            <td>
              <p><%=  category.name %></p>
            </td>
            <td>
              <p><%=  category.description %></p>
            </td>
            <td align="center" valign="middle">

              <div class="pull-left hidden-phone">

                <%= link_to category_path(category), id: "view-category", class: "btn btn-success btn-xs" do %>
                <i class=" fa fa-check"></i>
                <%end%>

                <%= link_to  edit_admin_category_path(category), id: "edit-category", class: "btn btn-primary btn-xs edit-category" do %>
                <i class=" fa fa-pencil"></i>
                <%end%>

                <%= link_to admin_category_path(category), class: "btn btn-danger btn-xs", method: :delete, data: { confirm: "Are you sure you want to delete this provider?" } do %>
                <i class=" fa fa-trash-o"></i>
                <%end%>

              </div>
              <%end%>

            </td>
          </tbody>

        </table>
      </div>
    </centre>
  </div>
