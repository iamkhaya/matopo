<% title(@category.name, "Category") %>

<header>
    <h3><%= @category.name %></h3>
    <p><%= @category.description %></p>

    <ul class="actions">
        <li>
            <%= link_to "Add Activity", new_admin_category_path(@category), class: "new" %></p>
    </li>
    <li>
        <%= link_to "Edit Category", edit_admin_category_path(@category), class: "edit" %>
    </li>
    <li>
        <%= link_to "Delete category", admin_category_path(@category),
                    method: :delete,
                    data: { confirm: "Are you sure you want to delete this category?" },
                    class: "delete"
                %>
    </li>
</ul>


</header>
