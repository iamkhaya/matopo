<header>
    <h3>Reservations</h3>

    <ul class="actions">
        <li>
            <%= link_to "New Reservation", new_admin_reservation_path, class: "new" %>
        </li>
    </header>
    <div id="reservations">
        <centre>
            <div class="table-responsive table-striped table-condensed">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Offering</th>
                            <th>Status</th>
                            <th>Start Time</th>
                            <th>End Time</th>
                            <th>Booking Date</th>
                            <th>Manipulation</th>
                        </tr>
                    </thead>

                    <tbody>
                        <% @reservations.each do |reservation| %>
                        <tr>
                            <td>
                                <p><%=  reservation.offering %></p>
                            </td>
                            <td>
                                <p><%=  reservation.status %></p>
                            </td>
                            <td>
                                <p><%=  reservation.booking_date %></p>
                            </td>
                            <td>
                                <p><%=  reservation.start_time %></p>
                            </td>
                            <td>
                                <p><%=  reservation.end_time %></p>
                            </td>

                            <td>
                                <%= link_to "View Reservation", reservation_path(reservation), class: "new" %>

                                <%= link_to "Edit Reservation", edit_admin_reservation_path(reservation), class: "edit" %>

                                <%= link_to "Delete Reservation", reservation_path(reservation), method: :delete, data: { confirm: "Are you sure you want to delete this reservation?" }, class: "delete" %>
                            </td>
                        </tr>
                        <% end %>
                    </tbody>

                </table>
            </div>
        </centre>

    </div>
