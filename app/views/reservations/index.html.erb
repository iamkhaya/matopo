<div class='page-header'>
  <div class='btn-toolbar pull-right'>
    <div class='btn-group'>
      <%= button_to "New Reservation", new_admin_reservation_path, class: "btn btn-primary" %>
    </div>
  </div>
  <h2>Reservations</h2>
</div>

<center>
  <div class="pagination">
    <%= will_paginate @reservations %>
  </div>
</center>

<div id="reservations">
  <centre>
    <div class="table-responsive table-striped table-condensed">
      <table class="table">
        <thead>
          <tr>
            <th>#</th>
            <th>Offering</th>
            <th>Status</th>
            <th>Start Time</th>
            <th>Endtyyy Time</th>
            <th>Booking Date</th>
            <th>Manipulation</th>
          </tr>
        </thead>

        <tbody>
          <% @reservations.each do |reservation| %>
          <tr>
            <td>
              <p><%=  reservation.id %></p>
            </td>
            <td>
              <p><%=  reservation.offering.name %></p>
            </td>
            <td>
              <p><%=  reservation.status %></p>
            </td>
            <td>
              <p><%=  reservation.booking_date %></p>
            </td>
            <td>
              <p><%=  reservation.start_time %></p>
            </td>
            <td>
              <p><%=  reservation.end_time %></p>
            </td>

            <td>
              <div class="pull-left hidden-phone">

                <%= link_to reservation_path(reservation), class: "btn btn-success btn-xs" do %>
                <i class=" fa fa-check"></i>
                <%end%>

                <%= link_to  edit_admin_reservation_path(reservation), class: "btn btn-primary btn-xs" do %>
                <i class=" fa fa-pencil"></i>
                <%end%>

                <%= link_to reservation_path(reservation), class: "btn btn-danger btn-xs", method: :delete, data: { confirm: "Are you sure you want to delete this provider?" } do %>
                <i class=" fa fa-trash-o"></i>
                <%end%>

              </div>

            </td>
          </tr>
          <% end %>
        </tbody>

      </table>
    </div>
  </centre>

</div>
