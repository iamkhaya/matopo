<header>
  <h1>Continent: <%= @continent.name %></h1>
</header>


<p><%=simple_format(@region.name) %></p>

    <ul class="actions">
        <li>
          <li><%= link_to "Edit Region", [:edit, @continent, @region], class: "edit" %>
        </li>
        <li>
            <%= link_to "Delete Region", [@continent, @region],
                method: :delete,
                data: { confirm: "Are you sure you want to delete this region?" },
                class: "delete"
            %>
        </li>
    </ul>
  </header>
