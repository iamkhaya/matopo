<div class="container-fluid">
  <% @offerings.in_groups_of(4, false).each do |group| %>
  <div class="row">
    <% group.each do |offering| %>
    <div class="col-md-3">
      <div class="thumbnail">
        <% offering.attachments.each do |attachment| %>
        <img src="<%= attachment.file.url %>" alt="">
        <% break %>

        <%end%>
        <div id="image-footer">
          <div id="price">
            <h5><%= offering.name.upcase %></h5>
          </div>
          <h5><%=  Activity.find(offering.activity_id).name %></h5>

          <%= fa_icon "star" %>
          <%= fa_icon "star" %>
          <%= fa_icon "star" %>
          <%= fa_icon "star" %>
          <%= fa_icon "star" %>
        </div>
        <div class="caption">
          <p>
            <a href="#" class="btn btn-primary btn-sm" role="button">Activity Details</a>
            <a href="#" class="btn btn-default btn-sm" role="button">Add to cart</a>
          </p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <% end %>

</div>
